<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark" android:orientation="vertical"
    android:weightSum="1">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="467dp" android:id="@+id/map"
        tools:context="com.suburbandigital.amine.tagu.MainMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#3fe1e1e1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Custom Tag"
            android:onClick="addCustomTag"
            android:id="@+id/AddTag"
            />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".38"
            android:clickable="false"
            android:visibility="invisible" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/BottomFrame"
            android:layout_weight=".62"
            android:background="#de0073ff">

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Go To"
                android:id="@+id/Goto"
                android:layout_gravity="left"
                android:background="#bcff8800"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tag Name"
                android:id="@+id/TagName"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textIsSelectable="false"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Add To Tags"
                android:id="@+id/AddToTags"
                android:layout_gravity="right"
                android:background="#bcff8800"
                android:textSize="18dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description of information about tag"
                    android:id="@+id/Desc"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textIsSelectable="false"
                    android:textSize="18dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:textStyle="normal|italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lat/Lng:"
                    android:id="@+id/Pos"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed: "
                    android:id="@+id/Speed"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time To:"
                    android:id="@+id/Time"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
